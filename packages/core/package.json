{
	"name": "@coffee-machine/core",
	"version": "1.1.3",
	"description": "Core abstractions and implementations for building realistic coffee machine simulations in TypeScript",
	"keywords": [
		"coffee",
		"simulator",
		"typescript",
		"abstractions",
		"espresso",
		"machines"
	],
	"author": "Pedro Carre√±o (34664891+Pkcarreno@users.noreply.github.com)",
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/core/index.d.ts",
				"default": "./dist/core/index.js"
			},
			"require": {
				"types": "./dist/core/index.d.cts",
				"default": "./dist/core/index.cjs"
			}
		},
		"./machines": {
			"import": {
				"types": "./dist/machines/index.d.ts",
				"default": "./dist/machines/index.js"
			},
			"require": {
				"types": "./dist/machines/index.d.cts",
				"default": "./dist/machines/index.cjs"
			}
		}
	},
	"scripts": {
		"build": "tsdown",
		"typecheck": "tsc --noEmit --project tsconfig.json",
		"test": "vitest",
		"example:espresso": "tsx ./src/examples/espresso.ts"
	},
	"files": [
		"dist"
	],
	"license": "MIT",
	"devDependencies": {
		"tsdown": "^0.15.2",
		"vitest": "^3.2.4"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pkcarreno/coffeemachine.git"
	}
}
